<div class="page-wrapper">
  <% flash.get('errorMsg').forEach(function (message) { %>

  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <strong>Error!</strong>
    <%- message %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>

  <% }) %>
  <% flash.get('message').forEach(function (message) { %>

  <div class="alert alert-success alert-dismissible fade show" role="alert">
    <strong>Success!</strong>
    <%- message %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>

  <% }) %>

  <div class="page-breadcrumb">
    <div class="row">
      <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
        <h4 class="page-title">User Details</h4>
      </div>
      <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
        <nav aria-label="breadcrumb" class="breadcrumb-float">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">User Details</li>
          </ol>
        </nav>
      </div>
    </div>
  </div>

  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12" id="userView">
        <div class="card h-100">
          <div class="card-body">
            <div class="row">
              <div class="col-lg-4 col-xs-4 m-t-30">
                <div class="media">
                 <span class="mediaCircleIcon mr-2"><i class="mdi mdi-account fs-18"></i></span>
                  <div class="media-body">
                    <h6 class="m-t-2 lh-1-5 font-w-6">
                      <small class="text-muted font-w-6">User Name</small>
                      <br>
                      <%= `${user.firstName} ${user.lastName}` %></h6>
                  </div>
                </div>
              </div>
              <div class="col-lg-4 col-xs-4 m-t-30">
                <div class="media"> <span class="mediaCircleIcon mr-2"><i class="mdi mdi-briefcase fs-18"></i></span>
                  <div class="media-body">
                    <h6 class="m-t-2 lh-1-5 font-w-6">
                      <small class="text-muted font-w-6">Role</small>
                      <br>
                      <%= user.role.length?user.role[0].authority:'' %></h6>
                  </div>
                </div>
              </div>
              <div class="col-lg-4 col-xs-4 m-t-30">
                <div class="media">
                  <span class="mediaCircleIcon mr-2"><i class="mdi mdi-email fs-18"></i></span>
                  <div class="media-body">
                    <h6 class="m-t-2 lh-1-5 font-w-6">
                      <small class="text-muted font-w-6">Email Address</small>
                      <br>
                      <%= user.email %></h6>
                  </div>
                </div>
              </div>
          <!--    <div class="col-lg-4 col-xs-4 m-t-30">
                <div class="media">
                  <span class="mediaCircleIcon mr-2"><i class="mdi mdi-account-off fs-18"></i></span>
                  <div class="media-body">
                    <h6 class="m-t-2 lh-1-5 font-w-6">
                      <small class="text-muted font-w-6">Mode</small>
                      <br>
                      <%= user.isEnabled?'Active':'Inactive' %></h6>
                  </div>
                </div>
              </div>-->
              <div class="col-lg-4 col-xs-4 m-t-30">
                <div class="media">
                  <span class="mediaCircleIcon mr-2"><i class="mdi mdi-phone fs-18"></i></span>
                  <div class="media-body">
                    <h6 class="m-t-2 lh-1-5 font-w-6">
                      <small class="text-muted font-w-6">Mobile Number</small>
                      <br>
                      <%= user.mobileNumber || 'NA'%></h6>
                  </div>
                </div>
              </div>
              <div class="col-lg-4 col-xs-4 m-t-30">
                <div class="media"> <span class="mediaCircleIcon mr-2"><i class="mdi mdi-whatsapp fs-18"></i></span>
                  <div class="media-body">
                    <h6 class="m-t-2 lh-1-5 font-w-6">
                      <small class="text-muted font-w-6">Whatsapp Number</small>
                      <br>
                      <%= user.whatsAppNumber || 'NA' %></h6>
                  </div>
                </div>
              </div>
              <div class="col-lg-4 col-xs-4 m-t-30">
                <div class="media">
                  <span class="mediaCircleIcon mr-2"><i class="mdi mdi-account-star-variant fs-18"></i></span>
                  <div class="media-body">
                    <h6 class="m-t-2 lh-1-5 font-w-6">
                      <small class="text-muted font-w-6">Designation</small>
                      <br>
                      <%= user.designation || 'NA'%></h6>
                  </div>
                </div>
              </div>
              <div class="col-lg-4 col-xs-4 m-t-30">
                <div class="media">
                  <span class="mediaCircleIcon mr-2"><i class="mdi mdi-city fs-18"></i></span>
                  <div class="media-body">
                    <h6 class="m-t-2 lh-1-5 font-w-6">
                      <small class="text-muted font-w-6">Department</small>
                      <br>
                      <%= user.department || 'NA'%></h6>
                  </div>
                </div>
              </div>

              <div class="col-lg-4 col-xs-4 m-t-30">
                <div class="media">
                  <span class="mediaCircleIcon mr-2"><i class="mdi mdi-map-marker-circle fs-18"></i></span>
                  <div class="media-body">
                    <h6 class="m-t-2 lh-1-5 font-w-6">
                      <small class="text-muted font-w-6">Place of Posting</small>
                      <br>
                      <%= user.postingPlace || 'NA'%></h6>
                  </div>
                </div>
              </div>
            </div>


            <div class="row border-top">
              <div class="col-lg-12 col-md-12 col-xs-12 m-t-20">
                <a id="editUserButton" class="btn btn-primary" href="/admin/addUser?userId=<%=user.id%>">Edit</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- ============================================================== -->
  <!-- End Container fluid  -->
  <!-- ============================================================== -->

</div>
