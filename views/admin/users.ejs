  $(document).on("click", '#modal-btn-no',function(){
    console.log("data")
    $("#ModalDeleteUser").modal('hide');
  });
  $(document).on("click",'#modal-btn-yes', function(){
    $("#ModalDeleteUser").modal('hide');
    return modalConfirm();
  });
</script>

