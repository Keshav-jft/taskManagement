
<!-- ============================================================== -->
<!-- Page wrapper  -->
<!-- ============================================================== -->
<div class="page-wrapper">
  <% flash.get('message').forEach(function (message) { %>

  <div class="alert alert-success alert-dismissible fade show" role="alert">
    <strong>Success!</strong> <%-message%>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>

  <% }) %>
  <!-- ============================================================== -->
  <!-- Bread crumb and right sidebar toggle -->
  <!-- ============================================================== -->
  <div class="page-breadcrumb">
    <div class="row">
      <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
        <h4 class="page-title">Users</h4>
      </div>
      <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
        <nav aria-label="breadcrumb" class="breadcrumb-float">
          <ol class="breadcrumb">
            <a href="/admin/addUser" class="btn-primary "  data-toggle="tooltip" data-placement="bottom" title="Add User">
              <i class="mdi mdi-plus"></i>Add User
            </a>
          </ol>
        </nav>
      </div>
    </div>
  </div>
  <!-- ============================================================== -->
  <!-- End Bread crumb and right sidebar toggle -->
  <!-- ============================================================== -->
  <!-- ============================================================== -->
  <!-- Container fluid  -->
  <!-- ============================================================== -->
  <div class="container-fluid">

    <!---Next Add Notification FAB Button-->
    <div class="row">


      <div class="col-lg-12">
        <a href="/admin/addUser" class="lg-FAB-btn btn-primary followUp-circle-btn"  data-toggle="tooltip" data-placement="bottom" title="Add User">
          <i class="mdi mdi-plus"></i>
        </a>
      </div>
    </div>


    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="card-body">

            <div class="table-responsive">
              <table id="userTable" class="table table-hover" width="100%">
                <thead>
                <tr>
                  <th>Email</th>
                  <th>Name</th>
                  <th>Role</th>
                  <th>Status</th>
                  <th class="d-xl-none">Action</th>
                </tr>
                </thead>
                <tbody>
                <%userList.forEach((user)=>{%>
                <tr class="hoverable-custom  d-xs-none" onclick="window.location='/admin/viewUser/<%=user.id%>';" style="cursor: pointer">
                  <td><%=user.email%></td>
                  <td><%=user.firstName%> <%=user.lastName%></td>
                  <td><%=user.role.length?user.role[0].authority:''%></td>
                  <td><%=user.isEnabled?'Active':'Inactive'%>

                    <%if(!(req.user.id===user.id)){%>
                    <div class="hidden-custom">
                      <a href="/admin/editUser/<%=user.id%>" class="text-secondary fs-18 m-l-12">
                        <i class="mdi mdi-pencil" data-toggle="tooltip" data-placement="bottom" title="Edit"></i>
                      </a>
                      <a href="/admin/viewUser/<%=user.id%>" class="text-secondary fs-18 m-l-12">
                        <i class="mdi mdi-eye" data-toggle="tooltip" data-placement="bottom" title="View"></i>
                      </a>
                      <a href="#" class="text-secondary fs-18 m-l-12"data-toggle="modal">
                        <i class="mdi mdi-delete" id="<%=user.id%>" data-toggle="tooltip" data-placement="bottom" title="Remove" onclick="deleteUser(this)" ></i>
                      </a>
                    </div>
                    <%}%>

                  </td>

                  <!--only extra small device show--->
                  <td class="d-xl-none">
                    <%if(!(req.user.id===user.id)){%>
                    <a href="/admin/editUser/<%=user.id%>" class="text-secondary fs-18 m-l-12">
                      <i class="mdi mdi-pencil" data-toggle="tooltip" data-placement="bottom" title="Edit"></i>
                    </a>
                    <a href="/admin/viewUser/<%=user.id%>" class="text-secondary fs-18 m-l-12">
                      <i class="mdi mdi-eye" data-toggle="tooltip" data-placement="bottom" title="View"></i>
                    </a>
                    <a href="#" class="text-secondary fs-18 m-l-12"data-toggle="modal">
                      <i class="mdi mdi-delete" id="<%=user.id%>" data-toggle="tooltip" data-placement="bottom" title="Remove" onclick="deleteUser(this)" ></i>
                    </a>
                    <%}%>
                  </td>
                </tr>
                <%})%>

                </tbody>

              </table>
            </div>
          </div>
        </div>
      </div>





    </div>
  </div>






  <!--==========confirm Dialog==============-->


  <div class="modal fade" id="ModalDeleteUser" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-body">
          <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
          </div>

          <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
              <div class="text-center">
                <i class="mdi mdi-alert-circle text-danger fs-60"></i>
                <h3>Are you sure?</h3>
                <p>Do you really want to delete these user?</p>
              </div>
            </div>
          </div>


          <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
              <div class="m-b-15 text-center">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" id="modal-btn-no">No, cancel it!</button>
                <button type="button" class="btn btn-danger" id="modal-btn-yes">Yes, delete it!</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>


  <!--=====================================-->







  <!-- ============================================================== -->
  <!-- End Container fluid  -->
  <!-- ============================================================== -->

</div>
